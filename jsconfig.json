{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "checkJs": true,
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "paths": {
            "@types/*": [
                "./src/types/*"
            ]
        }
    },
    "include": [
        "./src/**/*.js",
        "./src/types/**/*.d.ts"
    ]
}